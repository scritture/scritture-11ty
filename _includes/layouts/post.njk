---
layout: layouts/base.njk
templateClass: tmpl-post

---

<div class="container">


  <div class="p-2 p-md-5 mb-4 text-danger rounded alert-secondary">
    <div class="col-md-12 px-0">
      <h1 class="display-4 fst-italic">{{ title }}</h1>
      <p class="author">
     <a href="/tags/{{ author  | slugify }}" class="ms-1" ><span class="font-weight-bold text-dark"> di {{author}},</span></a> 
      <time datetime="{{ page.date | htmlDateString }}"  class="font-weight-bold text-dark" > &nbsp;  {{ page.date | readableDate }} </time> 
      </p>
    </div>
   </div>

    <div class="row">
     <p>
        {%- for tag in tags | filterTagList -%}
        {%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
        <dev >
        <a href="{{ tagUrl | url }}" class="btn btn-warning m-1" type="button" > {{ tag }} </a> 
        </dev>
        {%- endfor %}
      </p>
    </div>
    <div class="row">
       <div class="clearfix p-5 p-md-6 mb-4 ">
           <img src="{{image}}" class=" card rounded-8 img-fluid col-md-6 float-md-end mb-4 ms-md-4 " alt="...">
         <p class="lead">{{subtitle}}</p>
         <p >{{ content | safe }}</p>





